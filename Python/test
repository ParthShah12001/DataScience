var PopupView = Backbone.View.extend({
  el: '#popup-container',

  template: _.template(`
    <div class="popup">
      <label for="popup-input">Enter Message:</label>
      <input type="text" id="popup-input" />
      <button id="cancel-button">Cancel</button>
      <button id="ok-button" disabled>OK</button>
    </div>
  `),

  events: {
    'input #popup-input': 'updateOkButtonState',
    'click #cancel-button': 'cancel',
    'click #ok-button': 'ok'
  },

  initialize: function() {
    this.render();
  },

  render: function() {
    this.$el.html(this.template);
    return this;
  },

  updateOkButtonState: function() {
    var inputText = this.$('#popup-input').val();
    this.$('#ok-button').prop('disabled', inputText.trim() === '');
  },

  cancel: function() {
    this.trigger('popup:cancel');
    this.remove();
  },

  ok: function() {
    var inputText = this.$('#popup-input').val();
    this.trigger('popup:ok', inputText);
    this.remove();
  }
});















// Trigger the popup on button click
$('#open-popup-button').on('click', function() {
  var popup = new PopupView();
  $('body').append(popup.el);

  popup.on('popup:ok', function(value) {
    // Do something with the entered value
    console.log('Entered Message:', value);
  });

  popup.on('popup:cancel', function() {
    // Handle cancel event
    console.log('Popup cancelled');
  });
});
