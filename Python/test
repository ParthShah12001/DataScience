
 var actionButtonCell = Backgrid.StringCell.extend({
        className: 'width6',
        events: {
            'click .dropdown-menu li:nth-child(1) a': 'onClickDualDate',
            'click .dropdown-menu li:nth-child(2) a': 'onClickAmendment'
        },
        render: function () {
            Backgrid.StringCell.prototype.render.apply(this, arguments);
            this.$el.empty();
            var dropDown = "<div class='dropdown'>";
            dropDown += "<a href='#' class='dropdown-toggle' data-toggle='dropdown' role='button' aria-expanded='false'>Action<span class='caret'></span></a>";
            dropDown += "<ul class='dropdown-menu'>";
            dropDown += "<li><a>Dual Date</a></li>";
            dropDown += "<li><a>Amendment</a></li>";
            dropDown += "</ul>";
            dropDown += "</div>";

            this.$el.empty().html(dropDown);
            return this;
        },

